        <Button x:Name="Task_4" Content="Задание 4" HorizontalAlignment="Left" Margin="449,167,0,0" Grid.Row="1" VerticalAlignment="Top" Click="Task_4_Click"/>
        <Button x:Name="Task_5" Content="Задание 5" HorizontalAlignment="Left" Margin="518,167,0,0" Grid.Row="1" VerticalAlignment="Top" Click="Task_5_Click_1"  RenderTransformOrigin="4.089,0.603"/>
